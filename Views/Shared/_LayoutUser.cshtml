            <ul>
                <li><a href="@Url.Action("Index", "Bookstore")" class="current">Home</a></li>

                <li>
                    <a href="@Url.Action("DangKy", "NguoiDung")" target="_parent">Đăng ký</a>
                </li>
                <li>
                    <a href="@Url.Action("DangNhap", "NguoiDung")" target="_parent">Đăng nhập</a>
